<!DOCTYPE html>
<html>
  <head>

  </head>
  <body>
    <h1>articles listing page</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan=3>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= button_to 'View', article_path(article), method: :get %></td>
            <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
            <td><%= button_to 'Edit', edit_article_path(article), method: :get %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <button id='yo' onclick="location.href='/articles/new';">create new article</button>
  </body>
</html>